// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "./generated"
}

datasource db {
  provider = "postgresql"
}

model Profile {
  id          String   @id @default(cuid())
  name        String
  tagline     String
  bio         String   @db.Text
  location    String
  email       String
  phone       String?
  twitter     String?
  telegram    String?
  profileImage String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  experiences Experience[]
  education   Education[]
  skills      Skill[]
}

model Experience {
  id          String   @id @default(cuid())
  company     String
  position    String
  startDate   String
  endDate     String?
  description String[]
  current     Boolean  @default(false)
  profileId   String
  profile     Profile  @relation(fields: [profileId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([profileId])
}

model Education {
  id          String   @id @default(cuid())
  institution String
  degree      String
  field       String?
  year        String
  profileId   String
  profile     Profile  @relation(fields: [profileId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([profileId])
}

model Skill {
  id          String   @id @default(cuid())
  name        String
  category    String
  profileId   String
  profile     Profile  @relation(fields: [profileId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([profileId])
}

model ContactMessage {
  id          String   @id @default(cuid())
  name        String
  email       String
  subject     String?
  message     String   @db.Text
  read        Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([createdAt])
}
